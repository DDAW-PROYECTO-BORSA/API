{
    "openapi": "3.0.0",
    "info": {
        "title": "BorsaBatoi API",
        "version": "1.0.0"
    },
    "paths": {
        "/api/ciclos": {
            "get": {
                "tags": [
                    "Ciclos"
                ],
                "summary": "Pedir la lista de ciclos",
                "description": "Devuelve la lista de todos los ciclos registrados",
                "operationId": "getCiclosList",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CicloResource"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/ciclos/{id}": {
            "get": {
                "tags": [
                    "Ciclos"
                ],
                "summary": "Pedir la información de un ciclo",
                "description": "Devuelve la información del ciclo requerido a partir de su id",
                "operationId": "getCicloById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Ciclo id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operación realizada con éxito",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/CicloResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/familias": {
            "get": {
                "tags": [
                    "Familias"
                ],
                "summary": "Pedir la lista de familias",
                "description": "Devuelve la lista de todas las familias registradas",
                "operationId": "getFamiliasList",
                "responses": {
                    "200": {
                        "description": "Successful operation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FamiliaResource"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/familias/{id}": {
            "get": {
                "tags": [
                    "Familias"
                ],
                "summary": "Pedir la información de una familia",
                "description": "Devuelve la información de la familia requerida a partir de su id",
                "operationId": "getFamiliaById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Familia id",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Operación realizada con éxito",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/FamiliaResource"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Sign in",
                "description": "Login by email, password",
                "operationId": "authLogin",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user1@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "422": {
                        "description": "Wrong credentials response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Email o contraseña erróneos. Por favor, inténtalo de nuevo"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CicloResource": {
                "title": "CicloResource",
                "description": "**Ciclos**",
                "properties": {
                    "data": {
                        "title": "data",
                        "description": "Data wrapper",
                        "properties": {
                            "id": {
                                "title": "ID",
                                "description": "Identificador único del ciclo",
                                "type": "integer",
                                "example": 1
                            },
                            "ciclo": {
                                "title": "Ciclo",
                                "description": "Siglas del ciclo, en mayúsculas",
                                "type": "string",
                                "example": "CFM APD (LOE)"
                            },
                            "vliteral": {
                                "title": "Vliteral",
                                "description": "Nombre completo del Ciclo en valencià",
                                "type": "string",
                                "example": "Atenció a persones en situació de dependència"
                            },
                            "cliteral": {
                                "title": "Cliteral",
                                "description": "Nombre completo del Ciclo en castellano",
                                "type": "string",
                                "example": "Atención a personas en situación de dependencia"
                            },
                            "idFamilia": {
                                "title": "IDFamilia",
                                "description": "Identificador único de la familia a la que pertenece",
                                "type": "integer",
                                "example": 1
                            },
                            "responsable": {
                                "title": "Responsable",
                                "description": "Identificador único del usuario responsable del ciclo",
                                "type": "integer",
                                "example": 1
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "CicloResource"
                }
            },
            "FamiliaResource": {
                "title": "FamiliaResource",
                "description": "**Familias**",
                "properties": {
                    "data": {
                        "title": "data",
                        "description": "Data wrapper",
                        "properties": {
                            "id": {
                                "title": "ID",
                                "description": "Identificador único de la familia",
                                "type": "integer",
                                "example": 1
                            },
                            "vliteral": {
                                "title": "Vliteral",
                                "description": "Nombre completo de la familia en valencià, en mayúsculas",
                                "type": "string",
                                "example": "ANGLES"
                            },
                            "cliteral": {
                                "title": "Cliteral",
                                "description": "Nombre completo de la familia en castellano, en mayúsculas",
                                "type": "string",
                                "example": "INGLES"
                            },
                            "deptcurt": {
                                "title": "Abreviación",
                                "description": "Abreviación del nombre de la família",
                                "type": "string",
                                "example": "Ang"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "FamiliaResource"
                }
            },
            "User": {
                "required": [
                    "password"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": "true",
                        "example": "1"
                    },
                    "role": {
                        "description": "Rol del usuario",
                        "type": "string",
                        "readOnly": "true"
                    },
                    "email": {
                        "description": "Email del usuario, será único",
                        "type": "string",
                        "format": "email",
                        "readOnly": "true",
                        "example": "user@gmail.com"
                    },
                    "email_verified_at": {
                        "description": "Datetime marker of verification status",
                        "type": "string",
                        "format": "date-time",
                        "readOnly": "true",
                        "example": "2019-02-25 12:59:20"
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 32,
                        "example": "John"
                    },
                    "google_id": {
                        "description": "ID de Google, se añadirá automáticamente si inicia sesión mediante una cuenta de Google con el mismo email con el que se ha registrado",
                        "type": "string",
                        "maxLength": 255,
                        "example": "115280133845067737067"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "User"
                }
            }
        },
        "responses": {
            "200": {
                "description": "Success",
                "content": {
                    "application/json": {
                        "schema": {
                            "properties": {
                                "user": {
                                    "$ref": "#/components/schemas/User"
                                }
                            },
                            "type": "object"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "apiAuth": {
                "type": "http",
                "description": "Login with email and password to get the authentication token",
                "name": "Token based Based",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}